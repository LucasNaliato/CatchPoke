        <form action="/register" method="POST">
            <div class="field mt-3">
                <label class="label" for="username">Username</label>
                <input id="username" name="username" class="input" type="text" placeholder="Seu username">
            </div>
            <div class="field">
                <label class="label" for="password">Password</label>
                <input id="password" name="password" class="input" type="password" placeholder="Sua password">
            </div>
            <br>
            <div class="field is-grouped is-justify-content-center">
                <div class="control">
                    <button class="button is-success is-rounded">Enviar</button>
                </div>
        </form>
    </div>
